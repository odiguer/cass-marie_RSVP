
<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2">
    <h1>Nouveau Repas</h1>

    <%= form_for(@foodstuff) do |f| %>
    <%= render 'shared/error_messages', obj: @foodstuff %>

    <div class="form-group">
      <%= f.label :foodstuff_name, "Repas" %>
      <%= f.text_field :foodstuff_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :foodstuff_description, "Description (optionnel)" %>
      <%= f.text_area :foodstuff_description, class: 'form-control' %>
    </div>
    <%= f.submit "Sauvegarder", class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
</div>
