<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <div class="panel panel-default">
      <div class="panel-heading">Repas</div>
      <table class="table table-condensed table-striped">
        <thead>
          <th>Repas</th>
          <th>Description</th>
        </thead>
        <tbody>
          <% @foodstuffs.each do |foodstuff| %>
          <tr>
            <td><%= link_to foodstuff.foodstuff_name, edit_foodstuff_path(foodstuff) %></td>
            <td><%= foodstuff.foodstuff_description %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="panel-footer">
        <%= link_to "Nouveau repas", new_foodstuff_path, class: "btn btn-primary" %>
      </div>
    </div>
    
  </div>
</div>
