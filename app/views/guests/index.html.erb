

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Invités</h1>
    <table class="table table-condensed table-striped">
      <thead>
        <th>Nom d'invité</th>
      </thead>
      <tbody>
        <% @guests.each do |guest| %>
        <tr>
          <td><%= link_to "#{guest.full_name}", edit_guest_path(guest) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "Nouveau Invité", new_guest_path, class: "btn btn-primary" %>
  </div>
</div>
